{
	"info": {
		"name": "Nvox Journey API",
		"description": "Complete user journey flow demonstration - signup, login, journey progression through stages",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/alive",
					"host": ["{{base_url}}"],
					"path": ["alive"]
				}
			},
			"response": []
		},
		{
			"name": "2. Signup (Initialize Journey)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    const jsonData = pm.response.json();",
							"    pm.collectionVariables.set('user_id', jsonData.user_id);",
							"    console.log('User created with ID:', jsonData.user_id);",
							"    console.log('Journey started at stage:', jsonData.journey.current_stage);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"{{user_email}}\",\n  \"password\": \"{{user_password}}\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/v1/signup",
					"host": ["{{base_url}}"],
					"path": ["v1", "signup"]
				},
				"description": "Create new user account and initialize journey at REFERRAL stage"
			},
			"response": []
		},
		{
			"name": "3. Login (Get Access Token)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const jsonData = pm.response.json();",
							"    pm.collectionVariables.set('access_token', jsonData.access_token);",
							"    console.log('Access token obtained');",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"{{user_email}}\",\n  \"password\": \"{{user_password}}\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/v1/login",
					"host": ["{{base_url}}"],
					"path": ["v1", "login"]
				},
				"description": "Login to get JWT access token for authenticated requests"
			},
			"response": []
		},
		{
			"name": "4. Get Current Journey State",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/v1/journey/current",
					"host": ["{{base_url}}"],
					"path": ["v1", "journey", "current"]
				},
				"description": "Get current journey stage and available questions. Initially shows REFERRAL stage."
			},
			"response": []
		},
		{
			"name": "5a. Submit Boolean Answer (No Transition)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"question_id\": \"ref_eligible\",\n  \"answer_value\": true\n}"
				},
				"url": {
					"raw": "{{base_url}}/v1/journey/answer",
					"host": ["{{base_url}}"],
					"path": ["v1", "journey", "answer"]
				},
				"description": "Submit boolean answer - this does NOT trigger stage transition. User stays in REFERRAL stage."
			},
			"response": []
		},
		{
			"name": "5b. Submit High Karnofsky Score (→ WORKUP)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"question_id\": \"ref_karnofsky\",\n  \"answer_value\": 80.0\n}"
				},
				"url": {
					"raw": "{{base_url}}/v1/journey/answer",
					"host": ["{{base_url}}"],
					"path": ["v1", "journey", "answer"]
				},
				"description": "Submit high karnofsky score (>=40) - triggers transition from REFERRAL → WORKUP"
			},
			"response": []
		},
		{
			"name": "5c. Submit Low Karnofsky Score (→ EXIT)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"question_id\": \"ref_karnofsky\",\n  \"answer_value\": 30.0\n}"
				},
				"url": {
					"raw": "{{base_url}}/v1/journey/answer",
					"host": ["{{base_url}}"],
					"path": ["v1", "journey", "answer"]
				},
				"description": "Submit low karnofsky score (<40) - triggers transition from REFERRAL → EXIT"
			},
			"response": []
		},
		{
			"name": "6. Get Updated Journey State",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/v1/journey/current",
					"host": ["{{base_url}}"],
					"path": ["v1", "journey", "current"]
				},
				"description": "Get journey state after transition - should show new stage (WORKUP or EXIT) with new questions"
			},
			"response": []
		},
		{
			"name": "7. Update Existing Answer (Versioning)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"question_id\": \"ref_karnofsky\",\n  \"answer_value\": 85.0\n}"
				},
				"url": {
					"raw": "{{base_url}}/v1/journey/answer",
					"host": ["{{base_url}}"],
					"path": ["v1", "journey", "answer"]
				},
				"description": "Update previously submitted answer - creates new version, old version marked as not current"
			},
			"response": []
		},
		{
			"name": "8. Delete User (Anonymization)",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/v1/user",
					"host": ["{{base_url}}"],
					"path": ["v1", "user"]
				},
				"description": "Anonymize user data while preserving journey data for analytics. User can no longer login."
			},
			"response": []
		},
		{
			"name": "Alternative Flow: New User → WORKUP",
			"item": [
				{
					"name": "1. Signup (New User)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    pm.collectionVariables.set('user_id', jsonData.user_id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"workup_user@example.com\",\n  \"password\": \"TestPass123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/v1/signup",
							"host": ["{{base_url}}"],
							"path": ["v1", "signup"]
						}
					}
				},
				{
					"name": "2. Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    pm.collectionVariables.set('access_token', jsonData.access_token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"workup_user@example.com\",\n  \"password\": \"TestPass123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/v1/login",
							"host": ["{{base_url}}"],
							"path": ["v1", "login"]
						}
					}
				},
				{
					"name": "3. Get Current (REFERRAL)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/v1/journey/current",
							"host": ["{{base_url}}"],
							"path": ["v1", "journey", "current"]
						}
					}
				},
				{
					"name": "4. Submit High Score → WORKUP",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"question_id\": \"ref_karnofsky\",\n  \"answer_value\": 90.0\n}"
						},
						"url": {
							"raw": "{{base_url}}/v1/journey/answer",
							"host": ["{{base_url}}"],
							"path": ["v1", "journey", "answer"]
						}
					}
				},
				{
					"name": "5. Get Current (WORKUP)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/v1/journey/current",
							"host": ["{{base_url}}"],
							"path": ["v1", "journey", "current"]
						}
					}
				}
			],
			"description": "Complete flow showing user progressing to WORKUP stage"
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "user_email",
			"value": "journey_test@example.com",
			"type": "string"
		},
		{
			"key": "user_password",
			"value": "TestPass123!",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "",
			"type": "string"
		}
	]
}
